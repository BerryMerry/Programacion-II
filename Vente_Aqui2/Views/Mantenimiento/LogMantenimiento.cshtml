@{
    ViewBag.Title = "Mantenimiento Log";
}

<h2>Mantenimiento</h2>



<div class="panel panel-default" id="panelTablas">
    <div class="panel panel-heading" style="text-align: center;"><strong>Mantenimientos de Tablas</strong> </div>
    <div class="panel panel-body">
        <div class="col-lg-12">
            <div class="col-lg-4">
                <label>Descripción:</label>
                <input type="text" name="txtDescripcion" class="form-control GeneralForm " id="txtDescripcion" />
            </div>
            <div class="col-lg-4">
                <label>URLs:</label>
                <input type="text" name="txtUrls" class="form-control GeneralForm" id="txtUrls" />
            </div>
            <div class="col-lg-4" style="padding:initial;  ">
                <br />
                <a class="btn btn-primary btnSave" style="width: 25% "> Guardar</a>
                <a class="btn btn-primary btnEdit" style="width: 25%; display:none;"> Editar</a>

            </div>
            <br />
        </div>
        <br />
        <table class="table table-responsive" id="tblMantenimientos">
            <!--Cabecera de las columnas-->
            <thead>
                <tr>
                    <th>Codigo</th>
                    <th>Descripción</th>
                    <th>URLS</th>
                    <th>Creación</th>
                    <th>Modificación</th>
                    <th>Anulación</th>
                    <th>Estatus</th>
                </tr>

            </thead>

            <tbody>
                @foreach (var item in )
                {
                    <tr class="context-menu-one-mantTablas" data-id="@item.MantenimientoID" data-nombre="@item.Descripcion" data-url="@item.OpcionURL">

                        <td>@item.MantenimientoID</td>
                        <td>@item.Descripcion</td>
                        <td>@item.OpcionURL</td>
                        <td>@item.FechaCreacion (@item.UsuarioCreacion)</td>
                        <td>@item.FechaActualizacion (@item.UsuarioActualizacion)</td>
                        <td>@item.FechaAnulacion (@item.UsuarioAnulacion)</td>
                        @if (@item.FlagActivo == true)
                        {
                            <td style="color:green;">Activo</td>
                        }
                        else
                        {
                            <td style="color:red;">Inactivo</td>
                        }


                    </tr>

                }
            </tbody>

        </table>




    </div>

</div>